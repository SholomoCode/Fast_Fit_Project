@model Fast_Fit_Final_Project.ViewModels.MembersViewModel;

<h1>Edit Member</h1>

<form asp-controller="Members" asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="Age"></label>
        <input asp-for="Age" />
        <span asp-validation-for="Age"></span>
    </div>

    <div class="form-group">
        <label asp-for="ShoeSize"></label>
        <input asp-for="ShoeSize" />
        <span asp-validation-for="ShoeSize"></span>
    </div>

    <div class="form-group">
        <label asp-for="Gender"></label>
        <select asp-for="Gender" asp-items="@Model.MemberGenders"></select>
        <span asp-validation-for="Gender"></span>
    </div>

    <input type="hidden" value="@ViewBag.memberToEdit.Id" name="memberId" />
    <input type="submit" value="Edit Member" />

</form>